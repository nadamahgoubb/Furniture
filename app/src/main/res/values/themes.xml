<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Furniture" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DPEditTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="android:fontFamily">@font/cairo_cemibold</item>
    </style>
    <style name="DPEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="android:fontFamily">@font/cairo_light</item>
    </style>

    <style name="DPEditText.Normal">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:background">@drawable/dp_bg_edittext</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="android:fontFamily">@font/cairo_light</item>
        <item name="android:textColor">@color/grey_90</item>
    </style>

    <style name="DPEditText.Pass">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:background">@drawable/dp_bg_edittext</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
    </style>
    <style name="dashLine">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>
    <style name="DPButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/cairo_regular</item>
        <item name="android:background">@drawable/dp_bg_button</item>
    </style>
</resources>